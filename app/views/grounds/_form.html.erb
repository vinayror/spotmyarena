.btn {
  -webkit-border-radius: 0;
  -moz-border-radius: 0;
  border-radius: 0px;
  /*text-shadow: 1px 1px 3px #666666;*/
  font-family: Courier New;
  color: #ffffff !important;
  font-size: 15px;
  background: #65d934;
  padding: 2px 5px 2px 5px;
  text-decoration: none !important;
  margin-top: 6px;
}

