<section class="sub-banner">
            <!--Background-->
            <div class="bg-parallax bg-1"></div>
            <!--End Background-->
            <!-- Logo -->
            <div class="logo-banner text-center">
                <%= link_to root_path do %>
                    <%= image_tag "logo-banner.png", class: "" %>
                <% end %>
            </div>
            <!-- Logo -->
        </section>
        <!--End Banner-->

        <!-- Main -->
        <div class="main">
            <div class="container">
                <div class="main-cn element-page bg-white clearfix">
                    <!--Breakcrumb-->
                    <section class="breakcrumb-sc">
                        <ul class="breadcrumb arrow">
                            <li>User Settings</li>
                        </ul>
                    </section>
                    <!--End Breakcrumb-->
                    
                    <section class="user-profile">
                        <div class="row">
                            <%= render :partial => 'grounds/side_bar' %>
                            <div class="col-md-9">
                                <h2 class="user-profile__title">Settings</h2>
                                <div class="user-form">
                                    <div class="row">
                                        <div class="col-md-6">
                                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                                            <%= devise_error_messages! %>
                                            <h3>Personal Information</h3>
                                            <div class="field-input">
                                                <%= f.label "First name" %><br />
                                                <%= f.text_field :first_name, class: "input-text"%>
                                            </div>
                                            <div class="field-input">
                                                <%= f.label "Last name" %><br />
                                                <%= f.text_field :last_name, class: "input-text"%>
                                            </div>
                                            <div class="field-input">
                                                <%= f.label :email %><br />
                                                <%= f.email_field :email, autofocus: true , class: "input-text"%>
                                            </div>
                                            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                                                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                                            <% end %>
                                            <div class="field-input">
                                                <%= f.label "Phone number" %><br />
                                                <%= f.text_field :mobile, class: "input-text"%>
                                            </div>
                                           <div class="field-input">
                                                <%= f.label :age %><br />
                                                <%= f.text_field :age, class: "input-text"%>
                                            </div>
                                            
                                            <h3>Location</h3>
                                            <div class="field-input">
                                                <%= f.label :city %><br />
                                                <%= f.text_field :city, class: "input-text"%>
                                            </div>
                                            <div class="field-input">
                                                <%= f.label :address %><br />
                                                <%= f.text_field :address, class: "input-text"%>
                                            </div>
                                            <div class="field-input">
                                                <%= f.label 'profile_image' %><br />
                                                <%= f.file_field :avatar, class: "input-text"%>
                                            </div>

                                            
                                        </div>

                                        <div class="col-md-6">
                                            <h3>Change Password</h3>
                                             <div class="field-input">
                                                <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                                                <%= f.password_field :password, autocomplete: "off" , class: "input-text"%>
                                            </div>
                                            <div class="field-input">
                                                <%= f.label :password_confirmation %><br />
                                                <%= f.password_field :password_confirmation, autocomplete: "off" , class: "input-text"%>
                                            </div>
                                            <div class="field-input">
                                                <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                                                <%= f.password_field :current_password, autocomplete: "off" , class: "input-text"%>
                                            </div>
                                            <div class="field-input">
                                                <%= f.submit "Save changes" , class: "awe-btn awe-btn-1 awe-btn-medium"%>
                                            </div>
                                        </div>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
        <!-- End Main -->