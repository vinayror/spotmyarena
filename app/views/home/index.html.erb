<section class="banner">
  <!--Background-->
  <div class="bg-parallax bg-1"></div>
  <!--End Background-->
  <div class="container">
    <!-- Banner Content -->
    <div class="banner-cn">
      <!-- Logo -->
      <div class="logo-banner text-center">
        <%= link_to root_path do %>
        <%= image_tag "logo-banner.png", class: "" %>
        <% end %>
      </div>
      <!-- Logo -->
      <!-- Category Singer -->
      <div class="category-singer clearfix">
        <div class="cate-singer-icon float-left">
          <h2>GROUND</h2>
          <img src="assets/icon-cruise.png" alt="">
        </div> 
        <p>Bridging the gap between<span>U</span>and<span>Sport</span></p>
      </div>
      <!-- End Category Singer -->
      <!-- Form Search -->
      <div class="form-cn form-cruise">
        <h2>Book Your Ground In 30 Seconds</h2>

        <div class="form-search clearfix">
          <%= form_tag search_grounds_path, :method => 'get' do %>
          <div class="form-field field-select field-lenght">
            <div class="select">
              <span>Ground Type</span>
              <%= select_tag :category, options_for_select(Ground::CATEGORY, params[:category]), include_blank: false%>
            </div>
          </div>
          <div class="form-field field-select field-lenght">
            <div class="select">
              <span>Select City</span>
              <%= select_tag :city, options_for_select(Ground::CITY, params[:city]), include_blank: false %>
            </div>
          </div>
          <div class="form-field field-select field-lenght">
            <div class="select">
              <span>Location</span>
              <%= select_tag :area, options_for_select(Ground::AREA, params[:area]), include_blank: false%>
            </div>
          </div>

          <div class="form-field field-date">
            <%= text_field_tag :date,(params[:date] or Date.today), class: 'field-input calendar-input', placeholder: "Check in" %>               
          </div>

          <div class="form-submit">
            <%= submit_tag "Search", :name => 'search_grounds', class: "awe-btn awe-btn-medium awe-search" %>
          </div>
          <% end %>
        </div>
      </div>
      <!-- End Form Search -->
    </div>
    <!-- End Banner Content -->
  </div>
</section>
